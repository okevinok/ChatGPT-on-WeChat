{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "ESNext",                              
    "rootDir": "src",                                
    "moduleResolution": "node",                      
    "resolveJsonModule": true,                       
    "allowJs": true,                                 
    "outDir": "dist",                                
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true
  }
}
